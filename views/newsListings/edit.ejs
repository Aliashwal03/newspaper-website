<%- include('../partials/head') %>

<div class="container mt-4" style="max-width: 600px;">
  <h2 class="text-center mb-4">Edit <%= foundListing.title %></h2>

  <form action="/newsListing/<%= foundListing._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" id="title" value="<%= foundListing.title %>" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="content" id="description" class="form-control" rows="3" required><%= foundListing.content %></textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Current Image</label><br>
      <img src="<%= foundListing.image.url %>" alt="Current Image" class="img-fluid mb-2" style="max-width:200px;">
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Replace The Old Image (optional)</label>
      <input type="file" accept="image/*" name="image" id="image" class="form-control" />
    </div>
    <select name="category" class="form-control" required>
      <option value="sport">Sport</option>
      <option value="politics">Politics</option>
      <option value="economic">Economic</option>
      <option value="tecnical">Technical</option>
      <option value="Art">Art</option>
    </select>
    <h1></h1>

    <button type="submit" class="btn btn-warning w-100">Update Listing</button>
  </form>